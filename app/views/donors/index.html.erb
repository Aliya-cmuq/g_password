<h1>Listing donors</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Phone</th>
    <th>Region</th>
    <th>Active</th>
    <th>Blood type</th>
    <th>Admin</th>
    <th>Social network</th>
    <th>Email</th>
    <th>Password digest</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @donors.each do |donor| %>
  <tr>
    <td><%= donor.first_name %></td>
    <td><%= donor.last_name %></td>
    <td><%= donor.phone %></td>
    <td><%= donor.region %></td>
    <td><%= donor.active %></td>
    <td><%= donor.blood_type %></td>
    <td><%= donor.admin %></td>
    <td><%= donor.social_network %></td>
    <td><%= donor.email %></td>
    <td><%= donor.password_digest %></td>
    <td><%= link_to 'Show', donor %></td>
    <td><%= link_to 'Edit', edit_donor_path(donor) %></td>
    <td><%= link_to 'Destroy', donor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

